<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="105"
        android:background="#7D6BC8"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_IMG_life2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/heart" />
        <ImageView
            android:id="@+id/main_IMG_life1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/heart" />
        <ImageView
            android:id="@+id/main_IMG_life0"
            android:layout_width="40dp"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/heart" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:background="#1F05CA"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:background="#102630"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_IMG_Left0"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/stone" />
            <ImageView
                android:id="@+id/main_IMG_Left1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/stone" />
            <ImageView
                android:id="@+id/main_IMG_Left2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/stone" />
            <ImageView
                android:id="@+id/main_IMG_Left3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/stone" />
            <ImageView
                android:id="@+id/main_IMG_Left4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/stone" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:background="#102630"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_IMG_Middle0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/stone" />
            <ImageView
                android:id="@+id/main_IMG_Middle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/stone" />
            <ImageView
                android:id="@+id/main_IMG_Middle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/stone" />
            <ImageView
                android:id="@+id/main_IMG_Middle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/stone" />
            <ImageView
                android:id="@+id/main_IMG_Middle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/stone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:background="#102630"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_IMG_Right0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/stone" />
            <ImageView
                android:id="@+id/main_IMG_Right1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/stone" />
            <ImageView
                android:id="@+id/main_IMG_Right2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/stone" />
            <ImageView
                android:id="@+id/main_IMG_Right3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/stone" />
            <ImageView
                android:id="@+id/main_IMG_Right4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/stone" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:background="#102630"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_IMG_CarInLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/spaceship" />

        <ImageView
            android:id="@+id/main_IMG_CarInMidle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/spaceship" />

        <ImageView
            android:id="@+id/main_IMG_CarInRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/spaceship" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:background="#78C8EC"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/main_IMG_BTN_Left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            app:srcCompat="@drawable/lefticon2" />

        <ImageButton
            android:id="@+id/main_IMG_BTN_Right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            app:srcCompat="@drawable/righticon" />


    </LinearLayout>



</LinearLayout>